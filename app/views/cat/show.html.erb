<h1><%=@cat.name%></h1>

<ul>
  <% @attr.each do |att| %>
    <% if att[0] != 'name' %>
    <li><%=att[0]%>: <%=att[1]%></li>
    <% end %>
  <% end %>
  <br>
  <br>
  <table>
    <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
    </tr>
    <% @cat.rentals.each do |rental| %>
    <tr>
    <td><%=rental.start%></td>
    <td><%=rental.end%></td>
      <% if rental.status == 'PENDING' %>
        <td>
          <form action="<%= approved_cat_rental_url(rental.id) %>" method="post">
            <input type="submit" value="Approve">
          </form>
        </td>
        <% else %>
        <td><%=rental.status%></td>
      <% end %>
    </tr>
    <% end %>
  </table>
</ul>
